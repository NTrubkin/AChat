<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.nnstu5.ui.ChatController">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <AnchorPane prefHeight="600.0" prefWidth="800.0">
            <children>
                <ImageView fitHeight="600.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@backgroundChat.jpg" />
                    </image>
                </ImageView>
                <Button fx:id="but" focusTraversable="false" layoutX="746.0" layoutY="556.0" mnemonicParsing="false" onAction="#processSendButton" prefHeight="24.0" prefWidth="24.0" style="-fx-background-image: url(iconSend.png); -fx-background-color: rgba(0,0,0,0);" />
                <TextField fx:id="field" focusTraversable="false" layoutX="237.0" layoutY="546.0" onAction="#processSendButton" prefHeight="44.0" prefWidth="498.0" promptText="Введите текст" style="-fx-background-color: rgba(0,0,0,0); -fx-prompt-text-fill: gray;">
               <font>
                  <Font name="Open Sans Italic" size="12.0" />
               </font></TextField>
                <TextArea fx:id="area" editable="false" focusTraversable="false" layoutX="237.0" layoutY="68.0" prefHeight="463.0" prefWidth="533.0" style="-fx-background-color: rgba(0,0,0,0);" />
            <ScrollPane layoutX="4.0" layoutY="68.0" prefHeight="463.0" prefWidth="209.0" style="-fx-background: rgba(0,0,0,0); -fx-background-color: rgba(0,0,0,0);">
               <content>
                  <VBox fx:id="conversationsBox" prefHeight="460.0" prefWidth="195.0" style="-fx-background-color: rgba(0,0,0,0);" />
               </content>
            </ScrollPane>
            <HBox alignment="TOP_CENTER" layoutX="235.0" layoutY="10.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="32.0" prefWidth="533.0">
               <children>
                  <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                     <image>
                        <Image url="@iconContact.png" />
                     </image>
                  </ImageView>
                  <Label fx:id="conversName" alignment="CENTER" prefHeight="32.0" text="Conversation" textFill="#cccccc">
                     <font>
                        <Font name="Open Sans Bold" size="16.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Pane layoutX="3.0" layoutY="546.0" prefHeight="53.0" prefWidth="216.0">
               <children>
                  <Label fx:id="nickname" layoutX="58.0" layoutY="7.0" prefHeight="22.0" prefWidth="152.0" text="Nickname" textFill="#cccccc">
                     <font>
                        <Font name="Open Sans Bold" size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="email" layoutX="58.0" layoutY="27.0" prefHeight="17.0" prefWidth="155.0" text="email@domain.com" textFill="#666666">
                     <font>
                        <Font name="Open Sans Light Italic" size="12.0" />
                     </font>
                  </Label>
                  <ImageView fitHeight="32.0" fitWidth="32.0" layoutX="18.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@iconContact.png" />
                     </image>
                  </ImageView>
               </children>
            </Pane>
            </children>
        </AnchorPane>
    </children>
</GridPane>
