<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.nnstu5.ui.ChatController">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <AnchorPane prefHeight="600.0" prefWidth="800.0">
            <children>
                <ImageView fitHeight="600.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@backgroundChat.jpg" />
                    </image>
                </ImageView>
                <Button fx:id="but" layoutX="734.0" layoutY="556.0" mnemonicParsing="false" onAction="#processSendButton" text="Send" />
                <TextField fx:id="field" focusTraversable="false" layoutX="237.0" layoutY="546.0" onAction="#processSendButton" prefHeight="44.0" prefWidth="487.0" promptText="Введите текст" />
                <TextArea fx:id="area" editable="false" focusTraversable="false" layoutX="237.0" layoutY="68.0" prefHeight="463.0" prefWidth="533.0" />
            <ScrollPane layoutX="4.0" layoutY="68.0" prefHeight="463.0" prefWidth="210.0">
               <content>
                  <VBox fx:id="conversationsBox" prefHeight="458.0" prefWidth="206.0" />
               </content>
            </ScrollPane>
            <Label fx:id="conversName" alignment="CENTER" layoutX="237.0" layoutY="14.0" prefHeight="25.0" prefWidth="533.0" text="Conversation" textFill="#fffafa">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label fx:id="nickname" layoutX="14.0" layoutY="543.0" prefHeight="27.0" prefWidth="210.0" text="Nickname" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="email" layoutX="14.0" layoutY="573.0" prefHeight="17.0" prefWidth="210.0" text="email@domain.com" textFill="#9a9a9a" />
            </children>
        </AnchorPane>
    </children>
</GridPane>
