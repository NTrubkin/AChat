<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.nnstu5.ui.AuthAndRegController">
   <children>
      <AnchorPane fx:id="authPane" prefHeight="200.0" prefWidth="200.0">
          <children>
              <ImageView fitHeight="600.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                      <Image url="@backgroundEnter.jpg" />
                  </image></ImageView>
              <AnchorPane prefHeight="200.0" prefWidth="200.0">
                  <children>
                      <TextField focusTraversable="false" layoutX="505.0" layoutY="176.0" prefHeight="25.0" prefWidth="200.0" promptText="E-mail" style="-fx-background-color: 0,0,0,0;">
                          <font>
                              <Font name="Open Sans Light Italic" size="12.0" />
                          </font>
                      </TextField>
                      <TextField focusTraversable="false" layoutX="505.0" layoutY="210.0" prefHeight="25.0" prefWidth="172.0" promptText="Пароль" style="-fx-background-color: 0,0,0,0;">
                          <font>
                              <Font name="Open Sans Light Italic" size="12.0" />
                          </font>
                      </TextField>
                      <Button layoutX="658.0" layoutY="283.0" mnemonicParsing="false" onAction="#processAuthButton" prefHeight="30.0" prefWidth="65.0" style="-fx-background-color: #00695c;" text="Войти" textAlignment="CENTER" textFill="WHITE">
                          <font>
                              <Font name="Open Sans Light" size="14.0" />
                          </font>
                      </Button>
                      <Label layoutX="512.0" layoutY="141.0" text="Вход" textFill="WHITE">
                          <font>
                              <Font name="Open Sans Light" size="18.0" />
                          </font>
                      </Label>
                      <Button layoutX="505.0" layoutY="285.0" mnemonicParsing="false" onAction="#showReg" style="-fx-background-color: 0,0,0,0;" text="Регистрация" textFill="#5f7471">
                          <font>
                              <Font name="Open Sans" size="12.0" />
                          </font>
                      </Button>
                  </children>
              </AnchorPane>
          </children>
      </AnchorPane>
      <AnchorPane fx:id="regPane" prefHeight="200.0" prefWidth="200.0">
          <children>
              <ImageView fitHeight="600.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                      <Image url="@backgroundRegistration.jpg" />
                  </image></ImageView>
              <AnchorPane prefHeight="200.0" prefWidth="200.0">
                  <children>
                      <Label layoutX="90.0" layoutY="140.0" text="Регистрация" textFill="WHITE">
                          <font>
                              <Font name="Open Sans Light" size="18.0" />
                          </font>
                      </Label>
                      <TextField focusTraversable="false" layoutX="83.0" layoutY="176.0" prefHeight="25.0" prefWidth="200.0" promptText="E-mail" style="-fx-background-color: 0,0,0,0;">
                          <font>
                              <Font name="Open Sans Light Italic" size="12.0" />
                          </font>
                      </TextField>
                      <TextField focusTraversable="false" layoutX="83.0" layoutY="210.0" prefHeight="25.0" prefWidth="201.0" promptText="Имя в системе" style="-fx-background-color: 0,0,0,0;">
                          <font>
                              <Font name="Open Sans Light Italic" size="12.0" />
                          </font>
                      </TextField>
                      <TextField focusTraversable="false" layoutX="83.0" layoutY="244.0" prefHeight="25.0" prefWidth="175.0" promptText="Пароль" style="-fx-background-color: 0,0,0,0;">
